# ============================================
# LEX-LEDGER ENVIRONMENT CONFIGURATION
# ============================================

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# MONGODB ATLAS CONFIGURATION
# ============================================
# MongoDB Atlas connection string for Lex-Ledger
MONGODB_URI=mongodb+srv://lexledger7_db_user:NewPassword123@lexandledger.vgpgs5m.mongodb.net/sample_mflix?retryWrites=true&w=majority

# Alternative local MongoDB (for development)
# MONGODB_URI=mongodb://localhost:27017/lex-ledger

# MongoDB Connection Options
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate a secure random string for JWT_SECRET
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-secure-change-this-in-production
JWT_EXPIRE=7d

# ============================================
# ADMIN CONFIGURATION
# ============================================
# Default admin credentials (change these immediately in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ============================================
# CORS CONFIGURATION
# ============================================
# Frontend URL for CORS (in development, Vite runs on port 5173)
FRONTEND_URL=http://localhost:5173

# ============================================
# RATE LIMITING
# ============================================
# Rate limit window in milliseconds (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Maximum number of requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FRONTEND CONFIGURATION (VITE)
# ============================================
# API URL for frontend (in production, this will be the same as the server)
VITE_API_URL=http://localhost:5000/api

# App Configuration
VITE_APP_NAME=Lex-Ledger
VITE_APP_VERSION=1.0.0